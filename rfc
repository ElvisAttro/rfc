#! /usr/bin/env bash
#
# rfc
#
# Author: Baptiste Fontaine
# License: MIT
# Version: 0.0.2
#
# URI: github.com/bfontaine/rfc
#

__rfc() {

    local VERSION='0.0.2'
    local rfc_dir="$HOME/.RFCs"

    print_rfc() {
        less "$rfc_dir/$1"
    }

    get_rfc() {
        curl -fs http://www.rfc-editor.org/rfc/rfc${1}.txt > "$rfc_dir/${1}"
    }

    init_rfc_dir() {

        mkdir -p $rfc_dir
        touch $rfc_dir/_404s

    }

    print_usage() {
        echo "Usage:
    rfc <RFC number>"
    }

    print_version() {
        echo "rfc v$VERSION - github.com/bfontaine/rfc"
    }

    if [ $# -eq 0 ]; then
        print_usage
        return
    fi

    ###

    init_rfc_dir

    case "$1" in

        -v|--version)
            print_version
            return ;;

        _404s)
            print_usage
            return ;;

        *)
        grep -q "^$1\$" $rfc_dir/_404s 2> /dev/null
        if [ $? -eq 0 ]; then

            echo "There's no such RFC, sorry."
            return

        elif [ ! -f "$rfc_dir/$1" ]; then

            get_rfc $1

            if [ $? -eq 22 ]; then

                echo "$1" >> "$rfc_dir/_404s"
                echo "There's no such RFC, sorry."

                [ ! -s "$rfc_dir/$1" ] && rm -f "$rfc_dir/$1"

                return
            fi

        fi
    
        print_rfc $* ;;
    esac

}

__rfc $*

