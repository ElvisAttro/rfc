#! /usr/bin/env bash
#
# rfc
#
# Author: Baptiste Fontaine
# License: MIT
# Version: 0.0.5
#
# URI: github.com/bfontaine/rfc
#

__rfc() {

    local VERSION='0.0.5'
    local COMMIT=''
    local PAGER=${PAGER:-less}
    local fetch_cmd='curl'
    local rfc_dir="$HOME/.RFCs"

    print_rfc() {
        $PAGER "$rfc_dir/$1"
    }

    fetch_url() {
        case $fetch_cmd in
            curl)
                curl -fs "$1" > "$2";
                return $? ;;

            wget)
                wget -q "$1" -O "$2";
                return $? ;;
        esac
    }

    get_rfc() {
        fetch_url \
            http://www.rfc-editor.org/rfc/rfc${1}.txt "$rfc_dir/${1}"
    }

    init_rfc_dir() {

        mkdir -p $rfc_dir
        touch $rfc_dir/_404s

    }

    update() {

        local new_commit=
        local actual=
        local tmp='._rfc_tmp'

        fetch_url \
            https://api.github.com/repos/bfontaine/rfc/git/refs/heads/master \
            $tmp

        local new_commit=$(grep '"sha"' $tmp | sed 's/.*"\([0-9a-z]\{8\}\).*,/\1/')
        local actual=''

        if [ "$COMMIT" == "$new_commit" ]; then
            echo 'This version is up to date!'
            return 0
        fi

        if [ "$COMMIT" != "" ]; then
            actual="from $COMMIT "
        fi

        fetch_url \
           https://raw.github.com/bfontaine/rfc/master/rfc $tmp

        \cp "$0" "/tmp/$0.bak" 2>/dev/null # Backup
        sed "s/COMMIT='[0-9a-z]*'/COMMIT='$new_commit'/" $tmp > "$0"
        chmod +x "$0"
        rm -f $tmp

        echo "'rfc' updated ${actual}to $new_commit"
        return 0
    }

    print_usage() {
        echo "Usage:
    rfc --version # display the version number and exit
    rfc --help    # display this text and exit

    rfc <number>  # display the RFC <number>
    rfc update    # Update the script
    rfc clear     # clear the cache"
    }

    print_version() {
        local commit=
        if [ "$COMMIT" != "" ]; then
            commit="[$COMMIT] "
        fi

        echo "rfc v$VERSION $commit- github.com/bfontaine/rfc"
    }

    ###

    if [ $# -eq 0 ]; then
        print_usage
        return 0
    fi

    which curl > /dev/null 2>&1
    if [ $? -ne 0 ]; then
        which wget > /dev/null 2>&1

        if [ $? -ne 0 ]; then
            echo "Error: You need Wget or cURL!"
            return 1
        fi

        fetch_cmd='wget'

    fi

    init_rfc_dir

    case "$1" in

        -v|--version)
            print_version
            return ;;

        -h|--help)
            print_usage
            return ;;

        -*)
            echo "Unrecognized option: $1"
            print_usage
            return 1;;

        clear)
            rm -rf $rfc_dir
            return ;;

        up|update)
            update
            return ;;

        _404s)
            print_usage
            return 1;;

        *)
        grep -q "^$1\$" $rfc_dir/_404s 2> /dev/null
        if [ $? -eq 0 ]; then

            echo "There's no such RFC."
            return 1

        elif [ ! -f "$rfc_dir/$1" ]; then

            get_rfc $1

            if [ $? -eq 22 ]; then

                echo "$1" >> "$rfc_dir/_404s"
                echo "There's no such RFC."

                [ ! -s "$rfc_dir/$1" ] && rm -f "$rfc_dir/$1"

                return 1
            fi

        fi
    
        print_rfc $* ;;
    esac

}

__rfc $*

